@model Itventory.web.Entidades.WorkStation

@{
    ViewData["Title"] = "Crear Estacion de Trabajo";
}


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Nueva Estacion de Trabajo</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label asp-for="EmployeeId" class="control-label">Empleado</label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                            <option value="">Seleccionar...</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="ComputerDeviceId" class="control-label">Computador</label>
                        <select asp-for="ComputerDeviceId" class="form-control" asp-items="ViewBag.PcId">
                            <option value="">Seleccionar...</option>
                        </select>
                        <span asp-validation-for="ComputerDeviceId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-4">
                        <label asp-for="SmartPhoneDeviceId" class="control-label">Celulares</label>
                        <select asp-for="SmartPhoneDeviceId" class="form-control" asp-items="ViewBag.SmarthphonesId">
                            <option value="">Seleccionar...</option>
                        </select>
                        <span asp-validation-for="SmartPhoneDeviceId" class="text-danger"></span>
                    </div>

                    @foreach (var category in ViewBag.PeripheralCategories)
                    {
                        <div class="form-group col-sm-3">
                            <label class="control-label">@category.Key</label>
                            <select asp-for="PeripheralsIds" size="8" class="form-control" asp-items="@category.Value" multiple>
                            </select>
                        </div>
                    }

                    <div class="form-group col-sm-3">
                        <label asp-for="OtherPeripheralsIds" class="control-label">Perifericos Mecanicos (Salud Ocupacional)</label>
                        <select id="otherPeripherals" asp-for="OtherPeripheralsIds" size="8 rows" class="form-control" asp-items="ViewBag.OtherPeripheralsId" multiple>
                        </select>
                    </div>
                   
                </div>


                <div class="form-group text-center">
                    <button id="submit" type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-floppy"></i> Guardar
                    </button>
                    <button id="backToList" type="button" class="btn btn-outline-danger" o onclick="window.location.href='@Url.Action("Index", "WorkStations")'">
                        <i class="bi bi-x-octagon"></i> Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {


    <script>
        $(document).ready(function () {
           

            $("select[multiple]").on("mousedown", "option", function (e) {
                e.preventDefault();
                $(this).prop("selected", !$(this).prop("selected"));

                $(this).parent().change();
            });
        });
    </script>


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
