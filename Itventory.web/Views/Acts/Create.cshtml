@model Itventory.web.Entidades.Act

@{
    ViewData["Title"] = "Crear Acta";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Nueva Acta</h6>
        </div>
        <div class="card-body ">
            <div class="col-sm-12">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="URL" type="hidden" value="CreacionInvalida" />
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="WorkStationId" class="control-label">Estacion de Trabajo</label>
                            <select asp-for="WorkStationId" class="form-control" asp-items="ViewBag.WorkStationId">
                                <option value="">Seleccionar... </option>
                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Name" class="control-label">Nombre de la acta a entregar</label>
                            <select asp-for="Name" class="form-control">
                                <option value="Acta Inicial">Acta de Inicial</option>
                                <option value="Acta de Actualizacion">Acta de Actualizacion</option>
                                <option value="Acta de Finalizacion">Acta de Finalizacion</option>
                            </select>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-12">
                            <label asp-for="File" class="control-label">Archivo PDF</label>
                            <input asp-for="File" type="file" class="form-control" accept=".pdf" />
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group text-center">
                        <button id="submit" type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-floppy"></i> Guardar
                        </button>
                        <button id="backToList" type="button" class="btn btn-outline-danger" onclick="window.location.href='@Url.Action("Index", "Acts")'">
                            <i class="bi bi-x-octagon"></i> Cancelar
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
